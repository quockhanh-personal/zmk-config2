#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    behaviors {
        td_num: tap_dance_num {
            compatible = "zmk,behavior-tap-dance";
            tapping-term-ms = <250>;
            bindings = <
                &sl NUM     // tap 1 lần → one-shot NUM
                &tog NUM    // double tap → lock / unlock NUM
            >;
        };

        td_fn: tap_dance_fn {
            compatible = "zmk,behavior-tap-dance";
            tapping-term-ms = <250>;
            bindings = <
                &sl "FN + NAV"
                &tog "FN + NAV"
            >;
        };

        td_media: tap_dance_media {
            compatible = "zmk,behavior-tap-dance";
            tapping-term-ms = <250>;
            bindings = <
                &sl MEDIA
                &tog MEDIA
            >;
        };

        esc_panic: esc_panic {
            compatible = "zmk,behavior-macro";
            label = "ESC_PANIC";
            #binding-cells = <0>;
        
            bindings = <
                &kp ESC
                &to BASE
            >;
        };
    };
};

/ {
        keymap {
                compatible = "zmk,keymap";
                default_layer {
                label = "BASE";
// -----------------------------------------------------------------------------------------
// |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSPC |
// |  ESC |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | MO2  |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ENT  |
//                    | ALT | SPC | MO1 |   | GUI | SHFT | CTL |
                        bindings = <
   &kp TAB   &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &esc_panic   &kp A &kp S &kp D &kp F &kp G   &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &lt NUM &td_num     &kp Z &kp X &kp C &kp V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp RET
                  &kp LALT &kp SPACE &lt "FN + NAV" &td_fn   &kp RGUI &kp RSHFT &kp RCTRL
                        >;
                };
                lower_layer {
                label = "NUM";
// -----------------------------------------------------------------------------------------
// | TRNS |  `  |     |     |     |     |   |     |  -  |  =  |  [  |  ]  | TRNS |
// | TRNS |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | TRNS |
// | TRNS |  \  | DEL |CAPS |     |     |   |     |     | TRNS| TRNS| TRNS| TRNS |
//                    | TRNS| TRNS| #### |   | TRNS| TRNS| TRNS|
                        bindings = <
   &trans    &kp GRAVE &none    &none     &none &none   &none &kp MINUS &kp EQUAL &kp LBKT &kp RBKT &trans
   &trans    &kp N1    &kp N2   &kp N3    &kp N4 &kp N5   &kp N6 &kp N7 &kp N8 &kp N9 &kp N0 &trans
   &lt MEDIA &td_media     &kp BSLH  &kp DEL  &kp CAPS  &none &none   &none &none &trans &trans &trans &trans
                              &trans &trans &trans   &trans &trans &trans
                        >;
                };
                raise_layer {
                label = "FN + NAV";
// -----------------------------------------------------------------------------------------
// |      |     |     |     |     |     |   |     |     |     |     |PGUP | HOME |
// |      |     |  F5 |  F6 |  F7 |  F8 |   | LFT | DWN | UP  | RGT |     |  END |
// | #### |     |  F9 | F10 | F11 | F12 |   |PGDN |  F1 |  F2 |  F3 |  F4 |      |
//                    | TRNS| TRNS| MO3 |   | TRNS| TRNS| TRNS|
                        bindings = <
   &none     &none &none  &none   &none   &none    &none     &none    &none    &none     &kp PG_UP &kp HOME
   &none     &none &kp F5 &kp F6  &kp F7  &kp F8   &kp LEFT  &kp DOWN &kp UP   &kp RIGHT &none     &kp END
   &trans    &none &kp F9 &kp F10 &kp F11 &kp F12  &kp PG_DN &kp F1   &kp F2   &kp F3    &kp F4    &none
                              &trans &trans &lt MEDIA &td_media   &trans &trans &trans
                        >;
                };
                media_layer {
                label = "MEDIA";
// -----------------------------------------------------------------------------------------
// |BTCLR | BT0 | BT1 | BT2 | BT3 | BT4 |   |     |     |     |     |PREV | MUTE |
// |      |     |     |     |     |     |   | RWD | VOLD| VOLU| FFD |     | PLAY |
// |      |     |     |     |     |     |   | NEXT|     |     |     |     |      |
//                    |     |     | ####|   |     |     |     |
                        bindings = <
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &none       &none        &none        &none    &kp C_PREV &kp C_MUTE
   &none      &none        &none        &none        &none        &none          &kp C_RW    &kp C_VOL_DN &kp C_VOL_UP &kp C_FF &none      &kp C_PP
   &none      &none        &none        &none        &none        &none          &kp C_NEXT  &none        &none        &none    &none      &none
                              &none &none &trans   &none &none &none
                        >;
                };
        };
};
